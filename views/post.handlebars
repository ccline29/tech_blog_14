<div>
    <h2>{{post.title}}</h2>
    <p>{{post.contents}}</p>
    <p>Created by: {{post.user.username}} on {{format_date post.date_created}}</p>
</div>

{{#if loggedIn}}
<form class="comment-form">
<div>
    <textarea class="textarea" name="comment-body" placeholder="Enter your comment here!" rows="4"></textarea>
</div>
<div>
    <button id="comment-btn" class="button" type="submit">Add Comment</button>
</div>
</form>
{{/if}}

{{> comments post.comments}}


{{#if loggedIn}}
<script src="/js/addComment.js"></script>
{{/if}}